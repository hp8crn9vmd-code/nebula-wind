---import ThemeToggle from "../components/ThemeToggle.astro";
import DirToggle from "../components/DirToggle.astro";
import "../styles/tokens.css";
import "../styles/global.css";

type Props = {
  
  seo?: SeoInput;
title: string;
  description?: string;
  lang?: string;
  dir?: "ltr" | "rtl";
  noIndex?: boolean;
};

const {
  title,
  description = "NebulaWind — a clean-room, production-ready Astro starter with design tokens, type-safe content collections, Pagefind search, and Starlight docs.",
  lang = "en",
  dir = "ltr",
  noIndex = false,
} = Astro.props;

// Prefer absolute canonical using `site` (set in astro.config.mjs). Fallback keeps build safe.
const canonical = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).toString()
  : Astro.url.pathname;
import ThemeInit from "../components/ThemeInit.astro";

const __p = (Astro.props ?? {}) as Record<string, unknown>;
const pageTitle =
  typeof __p.title === "string" && __p.title.trim() ? __p.title : "NebulaWind";
const pageDescription =
  typeof __p.description === "string" && __p.description.trim()
    ? __p.description
    : "NebulaWind — clean-room Astro starter with design system, content layer, local search, and quality gates.";
import { buildSeo, type SeoInput } from '../utils/seo';
const seo = buildSeo((Astro.props as Props).seo);
---

<!doctype html>
<html lang={lang} dir={dir} data-theme="light">
  <head>
    
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{seo.title}</title>
    <meta name="description" content={seo.description} />

    {seo.canonical && (
      <link rel="canonical" href={seo.canonical} />
    )}

    {seo.noindex && (
      <meta name="robots" content="noindex,nofollow" />
    )}
<ThemeInit />
<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={pageDescription} />
    <link rel="canonical" href={canonical} />

    {noIndex ? <meta name="robots" content="noindex,nofollow" /> : null}

    <meta name="theme-color" content="#0b1020" />
    <link rel="manifest" href="/site.webmanifest" />

    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="icon" href="/favicon.ico" sizes="any" />

    <link rel="alternate" type="application/rss+xml" title="NebulaWind RSS" href="/rss.xml" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="NebulaWind" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <title>{pageTitle}</title>
  <script is:inline>
(function () {
  const KEY = "nw-theme";
  const root = document.documentElement;

  function getSystem() {
    return window.matchMedia &&
      window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light";
  }

  function apply(theme) {
    root.dataset.theme = theme;
  }

  try {
    const saved = localStorage.getItem(KEY);
    if (saved === "light" || saved === "dark") {
      apply(saved);
    } else {
      apply(getSystem());
    }
  } catch {
    apply(getSystem());
  }

  window.__NW_SET_THEME__ = function (t) {
    if (t !== "light" && t !== "dark") return;
    apply(t);
    try { localStorage.setItem(KEY, t); } catch { /* noop */ }
  };
})();
</script>
</head>
  <body>
        <a href="#main" class="skip-link">Skip to content</a>

<header class="mx-auto max-w-5xl px-4 py-6 flex items-center justify-between gap-4">
      <a class="font-semibold tracking-tight" href="/" aria-label="NebulaWind Home">NebulaWind</a>
      <nav class="flex items-center gap-4 text-sm">
        <a href="/blog/" class="hover:underline">Blog</a>
        <a href="/library/" class="hover:underline">Library</a>
        <a href="/search/" class="hover:underline">Search</a>
        <a href="/docs/" class="hover:underline">Docs</a>
      </nav>
      <div class="flex items-center gap-2">
        <DirToggle />
        <ThemeToggle />
      </div>
      <div class="nw-theme-slot"><ThemeToggle label="Theme" /></div>
</header>

    <main id="main" class="mx-auto max-w-5xl px-4 pb-16">
      <slot />
    </main>

    <footer class="mx-auto max-w-5xl px-4 py-10 text-sm opacity-80">
      <p>© {new Date().getFullYear()} NebulaWind. Inspired by AstroWind.</p>
    </footer>
  </body>
</html>
