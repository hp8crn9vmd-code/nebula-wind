---
const {
  title = "NebulaWind",
  description = "NebulaWind â€” clean-room production starter.",
} = Astro.props;

import "../styles/global.css";

const canonical = Astro.url.pathname;
---

<!doctype html>
<html lang="en" dir="ltr" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <meta name="description" content={description} />
    <meta name="robots" content="index,follow" />

      <link rel="alternate" type="application/rss+xml" title="NebulaWind RSS" href="/rss.xml" />

    {canonical && <link rel=\"canonical\" href={canonical} />}

<!-- Icons / PWA -->
<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
<link rel="manifest" href="/site.webmanifest" />
<meta name="theme-color" content="#0b0f19" />


    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    {canonical && <meta property="og:url" content={canonical} />}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <script is:inline>
      (() => {
        try {
          const saved = localStorage.getItem('nw-theme');
          if (saved) document.documentElement.dataset.theme = saved;

          const savedDir = localStorage.getItem('nw-dir');
          if (savedDir) document.documentElement.dir = savedDir;
        } catch {
          // ignore
        }
      })();
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
