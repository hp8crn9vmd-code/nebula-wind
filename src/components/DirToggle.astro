<button id="nw-dir-toggle"
  class="px-3 py-2 rounded-[var(--nw-radius-md)] border border-white/10 bg-white/5 hover:bg-white/10 transition"
  type="button"
  aria-label="Toggle direction">
  Toggle RTL
</button>

<script>
  const btn = document.getElementById('nw-dir-toggle') as HTMLButtonElement | null;
  const root = document.documentElement;

  type Dir = 'ltr' | 'rtl';

  function getDir(): Dir {
    const stored = localStorage.getItem('nw-dir');
    const fromDom = (root.dir as Dir | undefined) ?? 'ltr';
    if (stored === 'rtl' || stored === 'ltr') return stored;
    return fromDom;
  }

  function setDir(dir: Dir): void {
    root.dir = dir;
    localStorage.setItem('nw-dir', dir);
  }

  btn?.addEventListener('click', () => {
    const next: Dir = getDir() === 'rtl' ? 'ltr' : 'rtl';
    setDir(next);
  });
</script>
