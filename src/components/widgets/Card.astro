---
import type { HTMLAttributes } from "astro/types";

export interface CardProps extends HTMLAttributes<"section"> {
  title?: string;
  description?: string;
}

const { title, description, class: className = "", ...rest } = Astro.props;
---

<section class={`nw-card ${className}`} {...rest}>
  {(title || description) && (
    <header class="nw-card__header">
      {title && <h3 class="nw-card__title">{title}</h3>}
      {description && <p class="nw-card__desc">{description}</p>}
    </header>
  )}
  <div class="nw-card__body">
    <slot />
  </div>
</section>
