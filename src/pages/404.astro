---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Page not found";
const description =
  "The page you’re looking for doesn’t exist. Use Docs, Blog, or Search to find what you need.";
---
<BaseLayout title={`${title} — NebulaWind`} description={description}>
  <main class="mx-auto max-w-4xl px-4 py-16">
    <h1 class="text-4xl font-semibold tracking-tight">{title}</h1>
    <p class="mt-4 max-w-prose text-lg text-slate-600 dark:text-slate-300">
      {description}
    </p>

    <div class="mt-8 flex flex-wrap gap-3">
      <a class="rounded-md border border-slate-300 px-4 py-2 text-sm font-medium hover:bg-slate-100 dark:border-slate-700 dark:hover:bg-slate-800" href="/docs/">
        Read the documentation
      </a>
      <a class="rounded-md border border-slate-300 px-4 py-2 text-sm font-medium hover:bg-slate-100 dark:border-slate-700 dark:hover:bg-slate-800" href="/blog/">
        Browse the blog
      </a>
      <a class="rounded-md border border-slate-300 px-4 py-2 text-sm font-medium hover:bg-slate-100 dark:border-slate-700 dark:hover:bg-slate-800" href="/search/">
        Search the site
      </a>
      <a class="rounded-md border border-slate-300 px-4 py-2 text-sm font-medium hover:bg-slate-100 dark:border-slate-700 dark:hover:bg-slate-800" href="/">
        Go to the homepage
      </a>
    </div>
  </main>
</BaseLayout>
