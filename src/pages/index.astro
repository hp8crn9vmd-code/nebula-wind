---
import BaseLayout from "../layouts/BaseLayout.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import { Box, Stack, Heading, Text, Button, Link } from '../components/primitives';
import { Alert, Badge, Card } from '../components/widgets';
import MainLayout from "../layouts/MainLayout.astro";;
---

<MainLayout title="NebulaWind">
<BaseLayout
  title="NebulaWind"
  description="NebulaWind: a clean-room, production-ready starter with type-safe content, docs, local search, and quality gates."
>
  <main class="min-h-screen">
    <div class="max-w-5xl mx-auto px-5 py-16">
      <div class="flex items-center justify-between gap-4">
        <div>
          <h1 class="text-4xl font-semibold tracking-tight">NebulaWind</h1>
          <div class="mt-4 flex flex-wrap gap-3 text-sm">
            <a class="text-white/70 hover:text-white" href="/blog/">Blog</a>
            <a class="text-white/70 hover:text-white" href="/search/">Search</a>
            <a class="text-white/70 hover:text-white" href="/library/">Library</a>
            <a class="text-white/70 hover:text-white" href="/docs/">Docs</a>
          </div>
        </div>
        <ThemeToggle />
      </div>

      <p class="mt-4 text-lg text-white/80">
        Clean-room starter built from scratch. Next steps: i18n (EN/AR), contact form, and more widgets/templates.
      </p>

      <div class="mt-10 grid gap-4 md:grid-cols-2">
        <div class="p-5 rounded-nw border border-white/10 bg-white/5">
          <h2 class="text-xl font-semibold">Design System</h2>
          <p class="mt-2 text-white/75">Tokens + theming as first-class citizens.</p>
        </div>
        <div class="p-5 rounded-nw border border-white/10 bg-white/5">
          <h2 class="text-xl font-semibold">Production Quality</h2>
          <p class="mt-2 text-white/75">Lint, typecheck, tests, e2e, and Lighthouse CI (in GitHub Actions).</p>
        </div>
      </div>

      <footer class="mt-12 text-sm text-white/60">
        Inspired by AstroWind (attribution-only; no code/assets reused).
      </footer>
    </div>
  </main>
</BaseLayout>

<!-- nebula:primitives-demo:start -->
<section style="margin-top: 2rem;">
  <Box class="box" style="padding: 1rem; border-radius: var(--radius-md, 12px); border: 1px solid color-mix(in srgb, var(--color-fg, #111) 12%, transparent);">
    <Stack gap="md">
      <Heading level=2>NebulaWind Design System</Heading>

      <Text muted>
        This section is a live demo wired in Kaggle. It uses primitives (Box/Stack) and components (Text/Heading/Button/Link).
      </Text>

      <Stack direction="row" gap="sm" wrap>
        <Button variant="primary" href="/docs/">Open Docs</Button>
        <Button variant="secondary" href="/blog/">View Blog</Button>
        <Button variant="ghost" href="/library/">Library</Button>
        <Button variant="danger" disabled ariaLabel="Disabled example">Disabled</Button>
      </Stack>

      <Text size="sm">
        Quick links: <Link href="/search/">Search</Link> Â· <Link href="/rss.xml" external>RSS</Link>
      </Text>
    </Stack>
  </Box>
</section>
<Card title="Widgets" description="Alert / Badge / Card">
  <Stack gap="sm">
    <Alert variant="info"><Text size="sm">Info alert example.</Text></Alert>
    <Stack direction="row" gap="sm" wrap>
      <Badge variant="accent">accent</Badge>
      <Badge variant="success">success</Badge>
      <Badge variant="warning">warning</Badge>
      <Badge variant="danger">danger</Badge>
    </Stack>
  </Stack>
</Card>
<!-- nebula:primitives-demo:end -->
</MainLayout>
