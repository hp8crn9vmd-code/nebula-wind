---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection, type CollectionEntry } from 'astro:content';

type BlogEntry = CollectionEntry<'blog'>;

export async function getStaticPaths() {
  const posts: BlogEntry[] = (await getCollection('blog')).filter((p: BlogEntry) => !p.data.draft);

  return posts.map((post: BlogEntry) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props as { post: BlogEntry };
const { Content } = await post.render();
---

<BaseLayout title={`${post.data.title} — NebulaWind`}>
  <main class="min-h-screen">
    <article class="max-w-3xl mx-auto px-5 py-16">
      <a class="text-sm text-white/70 hover:text-white" href="/blog/">← Back to Blog</a>

      <h1 class="mt-4 text-4xl font-semibold tracking-tight">{post.data.title}</h1>
      <p class="mt-3 text-white/70">{post.data.description}</p>

      <div class="mt-4 text-sm text-white/60">
        <time>{post.data.publishDate.toISOString().slice(0, 10)}</time>
      </div>

      {post.data.tags.length > 0 && (
        <ul class="mt-4 flex flex-wrap gap-2">
          {post.data.tags.map((t: string) => (
            <li class="text-xs px-2 py-1 rounded-full border border-white/10 text-white/70">
              {t}
            </li>
          ))}
        </ul>
      )}

      <div class="prose prose-invert mt-10 max-w-none">
        <Content />
      </div>
    </article>
  </main>
</BaseLayout>
